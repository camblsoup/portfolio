{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "lit"
    ],
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "brace-style": [
            "error",
            "allman",
            {
                "allowSingleLine": true
            }
        ],
        "semi": [
            "error",
            "always"
        ],
        "lit/no-template-arrow": "error",
        "lit/no-invalid-html": "warn",
        "lit/no-invalid-escape-sequences": "warn",
        "lit/no-duplicate-template-bindings": "warn",
        "lit/no-classfield-shadowing": "warn"
    },
    "env": {
        "browser": true,
        "es2021": true
    }
}